
<div id="new-user">

  <div class="container admin-form">

    <div class="row">
      <div class="col-sm-7">
        <div class="page-header">
          <h1>New User</h1>
        </div>

        <form id="user-form" class="form well" action="/users/new" method="post">
          <div class="form-group">
            <input type="text" class="form-control" name="username" placeholder="Username...">
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="fullname" placeholder="Fullname...">
          </div>
          <div class="form-group">
            <input type="email" class="form-control" name="emailUrl" placeholder="Email...">
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="twitterUrl" placeholder="Twitter...">
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="facebookUrl" placeholder="Facebook...">
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="thumbnailUrl" placeholder="Image Url...">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Enter password...">
          </div>
          <input type="submit" class="btn btn-primary" value="Submit">
        </form>
      </div>
      <div class="col-sm-5"></div>
    </div>

  </div>

</div>
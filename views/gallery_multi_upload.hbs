<div id="gallery-multi-upload">

  <div class="container">

    <h2>Upload Multiple Images</h2>

    {{!-- set enctype or else req.files wont exist --}}
    <form id="gallery-multi-upload-form" method="post" enctype="multipart/form-data">
      <div class="form-group">
        {{!-- multiple property allows multiple files to be uploaded --}}
        <input type="file" name="fileUpload" id="fileUpload" multiple="true">
      </div>
      <input type="submit" class="btn btn-primary" value="Submit">
    </form>

  </div>

</div>
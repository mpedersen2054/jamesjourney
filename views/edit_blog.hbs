<div id="edit-blog">

  <div class="container admin-form">

    <div class="row">
      <div class="col-sm-7">
        <div class="page-header">
          <h1>Edit Blog Post</h1>
        </div>

        <form id="blog-form" class="form well" action="/blog/{{blog.slug}}/?_method=PUT" method="POST">
          <input type="hidden" name="_method" value="PUT">
          <div class="form-group">
            <label for="covimg-input">Cover Image</label>
            <input id="covimg-input" class="form-control" type="text" name="coverImage" value="{{blog.coverImage}}">
          </div>
          <div class="form-group">
            <label for="title-input">Title</label>
            <input id="title-input" class="form-control" type="text" name="title" value="{{blog.title}}">
          </div>
          <div class="form-group">
            <label for="author-input">tags</label>
            <input type="text" name="tags" class="form-control" id="edit-blog-tokenfield" value="{{blog.tags}}" />
          </div>
          <div class="form-group">
            <label for="contentPreview-input">Content Preview</label>
            <textarea id="contentPreview-input" class="form-control" type="text" name="contentPreview">{{blog.contentPreview}}</textarea>
          </div>
          <div class="form-group">
            <label for="content-input">Content</label>
            <textarea id="content-input" class="form-control" name="content">{{blog.content}}</textarea>
          </div>
          <input type="submit" value="Save" class="btn btn-primary">
        </form>

      </div>
      <div class="col-sm-5"></div>
    </div>

  </div>

</div>

<div id="new-mass-email">
  <div class="container admin-form">
    <div class="row">
      <div class="col-sm-7">
        <div class="page-header">
          <h1>New Mass Email</h1>

          <form method="post" id="new-mass-email-form" name="new-mass-email-form" class="form well">
            <div class="form-group">
              <input name="subject" id="subject" type="text" class="form-control" placeholder="Subject...">
            </div>
            <div class="form-group">
              <textarea name="content" id="content" class="form-control" placeholder="Body of email..."></textarea>
            </div>
            <input type="submit" class="btn btn-primary" value="Send">
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
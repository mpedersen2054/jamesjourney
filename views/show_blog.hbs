<div id="show-blog">
  <div class="container whitebg">
    <div class="row">
      <div class="col-md-12">
        <div class="jumbo" style="background: url(http://www.dogslovewagtime.com/wp-content/uploads/2015/07/Dog-Pictures.jpg) no-repeat fixed center">
          <div class="wrap">
            <a href="#" class="jumbo-title">
              When Designing Your Customer Experience, Consider Today's Intergenerational Reality
            </a>
          </div>
        </div>

        <div class="content">

          <div class="row">
            <div class="col-md-8">

              <div class="on-left">

                <div class="meta">
                  <span class="date">Posted on Nov 2, 2015</span>
                  <span class="author">
                    <img src="//placehold.it/100x100" class="img-circle author-image">
                    <span>Donald Duck</span>
                  </span>
                  <div class="line clearfix"></div>
                </div>

                <div class="post-content">
                  {{{blog.content}}}
                </div>
              </div>
            </div>


            <div class="col-md-4">
              <div class="on-right">
                <h4>Side content</h4>

                <div class="tag-list">
                  <ul>
                    <li class="tag label label-info">A Tag</li>
                    <li class="tag label label-info">A Tag</li>
                    <li class="tag label label-info">A Tag</li>
                    <li class="tag label label-info">A Tag</li>
                  </ul>
                </div>

              </div>
            </div>
          </div>

          <div class="share">
            <h3>Think people should hear about this?</h3>
            <a href="#" class="social facebook">
              <i class="fa fa-facebook fa-3x"></i>
            </a>
            <a href="#" class="social twitter">
              <i class="fa fa-twitter fa-3x"></i>
            </a>
            <a href="#" class="social google-plus">
              <i class="fa fa-google-plus fa-3x"></i>
            </a>
          </div>

          {{!-- load the disqus vars into partial --}}
          <div class="disqus-partial">
            {{> disqus_partial disqusvars=disqus}}
          </div>

        </div>

      </div>

    </div>
  </div>
  {{> subscribe_block}}
</div>
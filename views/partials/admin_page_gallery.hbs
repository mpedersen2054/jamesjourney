<section class="admin-page__gallery">
  {{!-- <h3 class="title">Gallery</h3>
  <div class="submenu clearfix">
    <div class="item">
      <a href="/events/new" class="btn btn-default btn-xs">+ new</a>
    </div>
  </div> --}}
  <h1 class="page-header">
    Gallery
    <small></small>
  </h1>
  <ol class="breadcrumb">
    <li>
      <a href="/gallery">
        <i class="fa fa-dashboard"></i>
        Gallery
      </a>
    </li>
    <li>
      <a href="/gallery/multi-upload">
        <i class="fa fa-plus"></i>
        Multi-upload
      </a>
    </li>
  </ol>

  {{#if images}}
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each images}}
        <tr class="image-row">
          {{!-- img name --}}
          <td class="admin-img__name">{{name}} {{_id}}</td>

          {{!-- img date --}}
          <td class="jdate" data-dateOrig="{{dateAdded}}"></td>

          {{!-- view img link --}}
          <td>
            <a href="#" class="btn btn-link admin-view-img" data-container="body" data-placement="left" data-toggle="popover" data-title="{{name}}" data-html="true" data-content="<img src='{{image_url}}'>" data-trigger="hover">View</a>
          </td>
          <td class="image-options">
            {{!-- edit img btn --}}
            <button class="btn btn-default btn-xs edit-img-btn" data-imgref="{{_id}}"><i class="fa fa-pencil"></i></button>

            {{!-- delete img btn --}}
            <button class="btn btn-danger btn-xs delete-img-btn" data-imgref="{{_id}}"><i class="fa fa-times"></i></button>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  {{/if}}
</section>
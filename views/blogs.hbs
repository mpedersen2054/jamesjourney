<div id="blogs">

  <div class="container whitebg">
    <div class="row">
      <div class="col-md-12">

        <!-- {{dist_tags}} -->
        <div class="head">
          <div class="wrap">
            <h2>Blog</h2>
            <h4>Updates and inspiration</h4>
          </div>
        </div>
      </div>

      <div class="content">
        <div class="row">
          <div class="col-md-8">
            <div class="on-left">

              {{#each blogs}}

                <div class="blog">

                  <div class="jumbo" style="background: no-repeat center/100% url({{coverImage}})">
                    <div class="wrap">
                      <a href="/blog/{{slug}}">{{title}}</a>
                    </div>
                  </div>

                  <div class="meta">
                    <span class="left">Posted on {{formattedDate}}</span>
                    <span class="right">
                      <img class="img-circle" src="//placehold.it/50x50" alt="">
                      Donald Duck
                    </span>
                  </div>

                  <div class="blog-content">{{{contentPreview}}}</div>

                </div>

              {{/each}}
            </div>
          </div>

          <div class="col-md-4">
            <div class="on-right">
              <div class="takeupspace"></div>
              <h4>Side content</h4>

              <div class="tag-list">
                <ul>
                  <li class="tag label label-info">A Tag</li>
                  <li class="tag label label-info">A Tag</li>
                  <li class="tag label label-info">A Tag</li>
                  <li class="tag label label-info">A Tag</li>
                </ul>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

  {{> subscribe_block}}

</div>
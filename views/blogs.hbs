<div id="blogs">

  <div class="jumbohead">
    <div class="container">
      <div class="overlay-bg"></div>
      <div class="head">
        <p class="icon" align="center">
          <img src="http://dft010l2k5dxv.cloudfront.net/OurTeam_Icon.png">
        </p>
        <h1>Blog</h1>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="content">
      <div class="row">
        <div class="col-md-12">
          <div class="on-left">

            {{#each blogs}}

              <div class="blog">

                <div class="jumbo" style="background: no-repeat 90%/110% url({{coverImage}});">
                  <div class="wrap">
                    <a href="/blog/{{slug}}">{{title}}</a>
                  </div>
                </div>

                <div class="meta">
                  <span class="left">Posted on {{formattedDate}}</span>
                  <span class="right">
                    <img class="img-circle" src="{{authorThumbnailUrl}}" alt="">
                    {{authorFullname}}
                  </span>
                </div>

                <div class="blog-content">{{{contentPreview}}}</div>

              </div>

            {{/each}}
          </div>
        </div>


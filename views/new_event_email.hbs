
<div id="new-event-email">
  <div class="container admin-form">
    <div class="row">
      <div class="col-sm-7">
        <div class="page-header">
          <h1>New Mass Email</h1>

          <form method="post" id="new-event-email-form" name="new-event-email-form" class="form well">

            Which event would you like to send an email to?
            <br>
            {{#each events}}
              <input type="radio" {{#if @first}}checked="checked"{{/if}} name="eventId" value="{{id}}"> {{name}} <br>
            {{/each}}

            <div class="form-group">
              <input name="subject" id="subject" type="text" class="form-control" placeholder="Subject...">
            </div>
            <div class="form-group">
              <textarea name="content" id="content" class="form-control" placeholder="Body of email..."></textarea>
            </div>

            <input type="hidden" name="checkedEvent" value="hi">

            <input type="submit" class="btn btn-primary" value="Send">

          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="admin-page">

  <div class="fluid-container">
    
    {{#if user}}
      <div class="well">
        <h2>Welcome, {{user.username}}</h2>
      </div>
    {{/if}}

    {{#if blogs}}
    <div class="well">
        <h3 class="blog-title">Blog Posts <span><a href="/blog/new" class="btn btn-default btn-xs"><i> + new</i></a></span></h3>
        <hr>
        <table class="table table-striped">
          <tr>
            <th></th>
            <th></th>
            <th></th>
          </tr>
          {{#each blogs}}
          <tr>
            <td>{{@index}}</td>
            <td class="blog-link"><a href="/blog/{{slug}}">{{title}}</a></td>
            <td class="options">
              <a href="/blog/{{_id}}/edit" class="btn btn-default btn-sm">edit</a>
              <a href="/blog/{{_id}}/delete" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">delete</a>
            </td>
          </tr>
          {{/each}}
        </table>
      </div>
    {{/if}}

  </div>

</div>
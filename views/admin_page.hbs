<div id="admin-page">

  <div class="container">

    {{#if user}}
      <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Welcome!</strong> {{user.username}}
      </div>
    {{/if}}


    <section class="admin-page__blogs">
      <h3 class="title">Blog Posts</h3>
      <div class="submenu clearfix">
        <div class="item">
          <a href="/blog/new" class="btn btn-default btn-xs">+ new</a>
        </div>
      </div>
      {{#if blogs}}
        {{!-- <div class="well"> --}}
          <table class="table table-hover">
            <thead>
              <tr>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              {{#each blogs}}
                <tr>
                  <td class="blog-link"><a href="/blog/{{slug}}">{{title}}</a></td>
                  <td class="options">
                    {{!-- {{#if isFeatured}}

                    {{else}}

                    {{/if}} --}}
                    <a href="/blog/{{slug}}/edit" class="btn btn-default btn-sm"><i class="fa fa-pencil"></i></a>
                    <a href="/blog/{{slug}}/delete" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')"><i class="fa fa-times"></i></a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        {{!-- </div> --}}
      {{/if}}
    </section>

    <hr>

    <section class="admin-page__subscribers">
      <h3 class="title">Subscribers</h3>
      <div class="submenu clearfix">
        <div class="item">
          <a href="https://us11.admin.mailchimp.com/campaigns/create/" class="btn btn-default btn-xs">Send Mass Email</a>
        </div>
      </div>
      {{#if mcd}}
        <table class="table table-hover">
          <thead>
            <tr>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          {{#each mcd}}
            <tr>
              <td>{{email}}</td>
              <td>{{fname}}</td>
              <td>{{lname}}</td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      {{/if}}
    </section>

    <hr>

    <section class="admin-page__events">
      <h3 class="title">Events</h3>
      <div class="submenu clearfix">
        <div class="item">
          <a href="/events/new" class="btn btn-default btn-xs">+ new</a>
        </div>
      </div>

      {{#if events}}
        <table class="table table-hover">
          <thead>
            <tr>
              <th></th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          {{#each events}}
            <tr>
              <td><a href="/events/{{slug}}">{{name}}</a></td>
              <td>{{location}}</td>
              <td>{{formattedDate}}</td>
              <td>
                <a href="#" class="btn btn-default btn-xs btn-attendees">
                  {{attendees.length}} Attendees
                  <span><i class="fa fa-sort-desc"></i></span>
                </a>
                <a href="/events/{{slug}}/delete" class="btn btn-danger btn-xs delete-event-btn"><i class="fa fa-times"></i></a>
                <a href="/events/{{slug}}/edit" class="btn btn-default btn-xs edit-event-btn"><i class="fa fa-pencil"></i></a>
              </td>
            </tr>

            <tr class="attendee-row">
              <td colspan="4">
                <div class="row">
                  <div class="col-md-3 attendee-title"><b>Name</b></div>
                  <div class="col-md-3 attendee-title"><b>Email</b></div>
                  <div class="col-md-3 attendee-title"><b>Signed up Date</b></div>
                  <div class="col-md-3 attendee-title"><b>Message</b></div>
                </div>
                {{#each attendees}}
                <div class="row">
                  <div class="col-md-3 attendee-col attendee__full-name">{{f_name}} {{l_name}}</div>
                  <div class="col-md-3 attendee-col attendee__email">{{email}}</div>
                  <div class="col-md-3 attendee-col attendee__created-at" data-createdat="{{created_at}}"></div>
                  <div class="col-md-3 attendee-col attendee__message">
                    {{#if message}}
                      <a href="#" class="btn btn-link btn-sm" class="view-message-btn" data-message="{{message}}">
                        View Message
                      </a>
                    {{/if}}
                  </div>
                </div>
                {{/each}}
              </td>
            </tr>

          {{/each}}
          </tbody>
        </table>
      {{/if}}

    </section>

    <section class="admin-page__gallery">
      <h3 class="title">Gallery</h3>
      <div class="submenu clearfix">
        <div class="item">
          {{!-- <a href="/events/new" class="btn btn-default btn-xs">+ new</a> --}}
        </div>
      </div>

      {{#if images}}
        <p>hi</p>
        <table class="table table-hover">
          <thead>
            <tr>
              <th></th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {{#each images}}
            <tr class="image-row">
              <td>{{name}}</td>
              <td>{{dateAdded}}</td>
              <td>{{file_type}}</td>
              <td class="image-options">
                <a href="#" class="btn btn-default btn-xs edit-image-btn"><i class="fa fa-pencil"></i></a>
                <a href="#" class="btn btn-danger btn-xs delete-image-btn"><i class="fa fa-times"></i></a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      {{/if}}
    </section>


  </div>

</div>
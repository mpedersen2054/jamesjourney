<div id="admin-page">

  <div class="fluid-container">

    {{#if user}}
      <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Welcome!</strong> {{user.username}}
      </div>
    {{/if}}


    <h3 class="blog-title">Blog Posts <span><a href="/blog/new" class="btn btn-default btn-xs"><i> + new</i></a></span></h3>
    {{#if blogs}}
    <div class="well">
        <hr>
        <table class="table table-striped">
          <tr>
            <th></th>
            <th></th>
            <th></th>
          </tr>
          {{#each blogs}}
          <tr>
            <td>{{@index}}</td>
            <td class="blog-link"><a href="/blog/{{slug}}">{{title}}</a></td>
            <td class="options">
              <a href="/blog/{{slug}}/edit" class="btn btn-default btn-sm">edit</a>
              <a href="/blog/{{slug}}/delete" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">delete</a>
            </td>
          </tr>
          {{/each}}
        </table>
      </div>
    {{/if}}

  </div>

</div>
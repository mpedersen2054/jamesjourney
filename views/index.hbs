<div id="cover">

  <div class="site-wrap">

    <div class="jumbotron">
      <h1>Index Page</h1>
      {{#if user}}
        <h2>Welcome, {{user}}</h2>
      {{/if}}
    </div>

    <div class="container">

      <h2><a href="/blog">Blog</a></h2>

      {{#each blogs}}
        <div class="blog-container small">
          <h4><a href="/blog/{{slug}}">{{title}}</a></h4>
          {{!-- <p>{{{content}}}</p> --}}
          <p>{{content}}</p>
        </div>
      {{/each}}

      <hr>

      <h2><a href="/gallery">Gallery</a></h2>

      {{#each gals}}
        <a href="/gallery/{{_id}}">{{title}}</a> | {{image}}
        <br>
      {{/each}}
      <br><br>

    </div> {{!-- end .container --}}

  </div> {{!-- end .wrapper --}}

</div> {{!-- end #cover --}}
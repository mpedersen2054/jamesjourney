<div id="cover">

  <div class="site-wrap">

    <div class="jumbotron">
      <div class="container">
        <h1 class="pull-right">JAMES4EDS</h1>
        {{#if user}}
          <h2>Welcome, {{user}}</h2>
        {{/if}}
      </div>
    </div>

    <div class="fluid-container">

      <h2><a href="/blog">Blog</a></h2>

      {{#each blogs}}
        <div class="blog-container small">
          <h4><a href="/blog/{{slug}}">{{title}}</a></h4>
          {{!-- <p>{{{content}}}</p> --}}
          <p>{{{contentPreview}}}</p>
        </div>
      {{/each}}

      <hr>

      <h2><a href="/gallery">Gallery</a></h2>

      {{#each gals}}
        <a href="/gallery/{{_id}}">{{title}}</a> | {{image}}
        <br>
      {{/each}}
      <br><br>

      {{> subscribe_block}}

    </div> {{!-- end .container --}}

  </div> {{!-- end .wrapper --}}

</div> {{!-- end #cover --}}